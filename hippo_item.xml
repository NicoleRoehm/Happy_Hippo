<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <androidx.cardview.widget.CardView
        android:id="@+id/hippo_card"
        android:layout_width="300dp"
        android:layout_height="250dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        app:cardCornerRadius="100dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.20999998">

        <ImageView
            android:id="@+id/hippo_image"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:adjustViewBounds="true"
            android:contentDescription="TODO"
            android:scaleType="centerCrop"
            tools:srcCompat="@drawable/hippo1" />

    </androidx.cardview.widget.CardView>

    <TextView
        android:id="@+id/hippo_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:textAppearance="@style/HappyHippoTextStyleII"
        android:textColor="#0C4283"
        android:textSize="26sp"
        app:layout_constraintStart_toStartOf="@+id/hippo_card"
        app:layout_constraintTop_toBottomOf="@+id/hippo_card"
        tools:text="Hippo" />

    <TextView
        android:id="@+id/hippo_weight"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:textAppearance="@style/HappyHippoTextStyleII"
        android:textColor="#050505"
        android:textSize="18sp"
        app:layout_constraintStart_toStartOf="@+id/hippo_name"
        app:layout_constraintTop_toBottomOf="@+id/hippo_name"
        tools:text="1.7 g" />

    <TextView
        android:id="@+id/hippo_height"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:textAppearance="@style/HappyHippoTextStyleII"
        android:textColor="#000000"
        android:textSize="18sp"
        app:layout_constraintStart_toStartOf="@+id/hippo_weight"
        app:layout_constraintTop_toBottomOf="@+id/hippo_weight"
        tools:text="3.1 cm" />

    <Button
        android:id="@+id/adopt_Button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="92dp"
        android:layout_marginTop="44dp"
        android:layout_marginBottom="10dp"
        android:backgroundTint="#8194E8"
        android:text="to adopt"
        android:textColor="#050505"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="@+id/hippo_card"
        app:layout_constraintTop_toBottomOf="@+id/hippo_height" />
</androidx.constraintlayout.widget.ConstraintLayout>